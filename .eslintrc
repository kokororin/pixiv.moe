{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "comma-dangle": 1,
    "quotes": [ 1, "single" ],
    "no-undef": 1,
    "global-strict": 0,
    "no-extra-semi": 1,
    "no-underscore-dangle": 0,
    "no-console": 1,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "strict": [1, "never"],// babel inserts `"use strict";` for us
    "no-unreachable": 1,
    "no-else-return": 1,
    "no-empty-function": [1, {
      "allow": [
        "arrowFunctions",
        "functions",
        "methods",
      ]
    }],
    "no-extra-label": 1,
    "no-trailing-spaces": [1, { "skipBlankLines": true }],
    "no-alert": 0,
    "no-var": 1,
    "no-multi-spaces": 0,
    "spaced-comment": 1,
    "eol-last": 1,
    "prefer-arrow-callback": 0,
    "prefer-const": [1, { "destructuring": "all" } ],
    "prefer-spread": 1,
    "no-duplicate-imports": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-boolean-value": 1,
    "react/no-string-refs": 1,
    "react/self-closing-comp": 1,
    "react/jsx-no-bind": [1, {
        "ignoreRefs": true,
        "allowArrowFunctions": true
    }],
    "react/jsx-uses-vars": 1,
       "no-extra-boolean-cast": 1,
    "curly": 0,
    "default-case": 1,
    "dot-notation": [1, {
      "allowKeywords": true
    }],
    "eqeqeq": 1,
    "guard-for-in": 0,
    "no-caller": 1,
    "no-eq-null": 1,
    "no-eval": 1,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-fallthrough": 1,
    "no-floating-decimal": 1,
    "no-implied-eval": 1,
    "no-lone-blocks": 1,
    "no-loop-func": 1,
    "no-multi-str": 1,
    "no-native-reassign": 1,
    "no-new": 1,
    "no-new-func": 1,
    "no-new-wrappers": 1,
    "no-octal": 1,
    "no-octal-escape": 1,
    "no-proto": 1,
    "no-redeclare": 1,
    "no-script-url": 1,
    "no-self-compare": 1,
    "no-sequences": 1,
    "no-throw-literal": 1,
    "no-with": 1,
    "radix": 1,
    "wrap-iife": [1, "any"],
    "yoda": 1
  }
}
